{
  "compilerOptions": {
	  "baseUrl": ".",
	  "inlineSourceMap": true,
	  "inlineSources": true,
	  "allowSyntheticDefaultImports": true,
	  "module": "ESNext",
	  "target": "ES6",
	  "allowJs": false,
	  "noImplicitAny": true,
	  "moduleResolution": "node",
	  "importHelpers": true,
	  "isolatedModules": true,
	  "strictNullChecks": true,
    "lib": [
		  "DOM",
		  "ES5",
		  "ES6",
		  "ES7"
	  ]
  },
  "include": [
    "**/*.ts"
  ]
}
